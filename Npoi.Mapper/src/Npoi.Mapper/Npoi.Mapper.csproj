<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Convention-based mapper between strong typed object and Excel data via NPOI.
Extension for the original package while waiting for PR #82 and #84. Please use the original package if you don't need these extensions.</Description>
    <VersionPrefix>3.1.1</VersionPrefix>
    <Authors>POFerro</Authors>
    <TargetFrameworks>net40;net45;netstandard2.0</TargetFrameworks>
    <AssemblyName>Npoi.Mapper</AssemblyName>
    <PackageId>Npoi.Mapper.Extended</PackageId>
    <PackageTags>Excel;XLS;XLSX;NPOI;Object mapping;dynamic</PackageTags>
    <PackageProjectUrl>https://github.com/POFerro/Npoi.Mapper</PackageProjectUrl>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>3.5.2</Version>
    <PackageReleaseNotes>support .NET 4.0, .NET 4.5 and .net standard 2.0</PackageReleaseNotes>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>npoi.mapper.snk</AssemblyOriginatorKeyFile>
    <Product>Npoi.Mapper.Extended</Product>
    <RepositoryUrl>https://github.com/POFerro/Npoi.Mapper</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NPOI" Version="2.5.1" />
  </ItemGroup>
  
  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
    <PackageReference Include="System.Reflection.Emit" Version="4.3.0" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.ComponentModel.DataAnnotations" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net40' ">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.ComponentModel.DataAnnotations" />
  </ItemGroup>

</Project>
